//https://github.com/GoogleChrome/chrome-extensions-samples/blob/master/api/preferences/enableReferrer/popup.js
{
  "name": "Hoplite Polytonic Greek Keyboard - Chrome Extension",
  "description": "Type polytonic Greek in web inputs and textareas.",
  "version": "1.1",
  "manifest_version": 2,
  "content_scripts": [
   {
    "matches": ["http://*/*","https://*/*","file:///*/*"],
     "js": ["jquery.min.js","contentScript.js"],
     "css": ["contentScript.css"]
   }
 ],
"web_accessible_resources": [
 "contentScript.css",
 "fonts/newathu5.ttf",
 "hoplitekb.wasm"
 ]
}
